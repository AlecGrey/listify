<h1>Register</h1>

<%= form_with scope: :user, url: sign_up_path do |f| %>

    <% if flash[:signup_errors] %>
        <% flash[:signup_errors].each do |err| %>
            <p class="error"><%= err %></p>
        <% end %>
    <% end %>

    <%= f.label "Username" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label "Password" %>
    <%= f.password_field :password %>
    <br>
    <%= f.label "Confirm" %>
    <%= f.password_field :password_confirmation %>

    <br>
    <%= f.submit "Sign up" %>

<% end %>

<p>Already a user? Login <%= link_to "here", login_path %>.</p>
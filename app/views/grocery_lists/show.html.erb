<h1><%= @grocery_list.date %></h1>

<div class='current_data_grid'>

    <h2 class='recipe_header'>Recipes</h2>
    
    <div class='recipes'>

        <%= render partial: 'recipes', locals: {grocery_list: @grocery_list} %>

        <% if flash[:error] %>
            <p class="error"><%= flash[:error] %></p>
        <% end %>
    </div>

    <h2 class='list_header'>Grocery List</h2>
    
    <div class='list_container'>

        <% if @grocery_list.recipes.empty? %>
            <p id='empty_list'>Your grocery list is empty!</p>
        <% end %>

        <ul class='grocery_list'>
            <%= render partial: 'list_grocery_items', collection: @grocery_list.final_list.sort, as: :grocery_item %>
        </ul>
    </div>
</div>

<h2>Add a Recipe</h2>



<ul class='all_recipes_list'>
    <%= render partial: '/recipes/list', collection: Recipe.all, as: :recipe, locals: {grocery_list: @grocery_list} %>
</ul>
